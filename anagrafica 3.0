<!DOCTYPE html>
<html lang="it">

<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Anagrafica3.0</title>

<style>
table, th, td {
border: 1px solid black;
border-collapse: collapse;
margin-top: 20px;
}
th, td {
padding: 8px;
}
</style>

<script>

const anagrafica = {
    nome: "",
    cognome: "",
    indirizzo: "",
    citta: "",
    sesso: "",
    diplomi: [],
    provincia: "",
    sport: []
};

function stampa() {

    anagrafica.nome = document.getElementById("nome").value;
    anagrafica.cognome = document.getElementById("cognome").value;
    anagrafica.indirizzo = document.getElementById("indirizzo").value;
    anagrafica.citta = document.getElementById("citta").value;

    if (document.getElementById("maschio").checked) {
        anagrafica.sesso = "Maschio";
    } else if (document.getElementById("femmina").checked) {
        anagrafica.sesso = "Femmina";
    } else {
        anagrafica.sesso = "Non selezionato";
    }

    anagrafica.diplomi = [];
    let checkboxes = document.getElementsByName("diploma");
    for (let i = 0; i < checkboxes.length; i++) {
        if (checkboxes[i].checked) {
            anagrafica.diplomi.push(checkboxes[i].value);
        }
    }
    if (anagrafica.diplomi.length == 0) {
        anagrafica.diplomi.push("Nessun Diploma");
    }

    anagrafica.provincia = document.getElementById("provincia").value;

    anagrafica.sport = [];
    let sportOptions = document.getElementById("sport").options;
    for (let i = 0; i < sportOptions.length; i++) {
        if (sportOptions[i].selected) {
            anagrafica.sport.push(sportOptions[i].value);
        }
    }
    if (anagrafica.sport.length == 0) {
        anagrafica.sport.push("Nessuno");
    }

    let risultato =
        "<table><tr><th>Campo</th><th>Valore</th></tr>" +
        "<tr><td>Nome</td><td>" + anagrafica.nome + "</td></tr>" +
        "<tr><td>Cognome</td><td>" + anagrafica.cognome + "</td></tr>" +
        "<tr><td>Indirizzo</td><td>" + anagrafica.indirizzo + "</td></tr>" +
        "<tr><td>Città</td><td>" + anagrafica.citta + "</td></tr>" +
        "<tr><td>Sesso</td><td>" + anagrafica.sesso + "</td></tr>" +
        "<tr><td>Diplomi</td><td>" + anagrafica.diplomi.join(", ") + "</td></tr>" +
        "<tr><td>Provincia</td><td>" + anagrafica.provincia + "</td></tr>" +
        "<tr><td>Sport</td><td>" + anagrafica.sport.join(", ") + "</td></tr>" +
        "</table>";

    document.getElementById("risultato").innerHTML = risultato;
}

</script>
</head>

<body>

<h2>Anagrafica 3.0</h2>

<input type="text" id="nome" placeholder="Nome"><br>
<input type="text" id="cognome" placeholder="Cognome"><br>
<input type="text" id="indirizzo" placeholder="Indirizzo"><br>
<input type="text" id="citta" placeholder="Città"><br>

<input name="sesso" type="radio" id="maschio">Maschio<br>
<input name="sesso" type="radio" id="femmina">Femmina<br>

<label>Diplomi posseduti:</label><br>
<input type="checkbox" name="diploma" value="Licenza Media"> Licenza Media<br>
<input type="checkbox" name="diploma" value="Diploma Superiore"> Diploma Superiore<br>
<input type="checkbox" name="diploma" value="Laurea"> Laurea<br><br>

<label>Provincia:</label><br>
<select id="provincia">
<option value="MI">MI</option>
<option value="TO">TO</option>
<option value="RM">RM</option>
<option value="NA">NA</option>
</select><br><br>

<label>Sport praticati:</label><br>
<select id="sport" multiple size="4">
<option value="Calcio">Calcio</option>
<option value="Basket">Basket</option>
<option value="Nuoto">Nuoto</option>
<option value="Tennis">Tennis</option>
<option value="Palestra">Palestra</option>
<option value="Golf">Golf</option>
<option value="Cricket">Cricket</option>
<option value="Pallanuoto">Pallanuoto</option>
</select><br><br>

<input type="button" value="Stampa" onclick="stampa()">
<br><br>

<div id="risultato"></div>

</body>
</html>
