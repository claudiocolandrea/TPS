<!DOCTYPE html>
<html>
<head>
    <title>Anagrafica 3.0</title>
    <script>
        function stampa() {

            const anagrafica = {};

            anagrafica.nome = document.getElementById("nome").value;
            anagrafica.cognome = document.getElementById("cognome").value;
            anagrafica.indirizzo = document.getElementById("indirizzo").value;
            anagrafica.citta = document.getElementById("citta").value;

            let sessoSel = document.querySelector('input[name="sesso"]:checked');
            anagrafica.sesso = sessoSel ? sessoSel.value : "Non selezionato";

            let diplomi = "";
            let checks = document.querySelectorAll('input[name="dipl"]:checked');
            checks.forEach(c => diplomi += c.value + " ");
            anagrafica.diplomi = diplomi === "" ? "Nessuno" : diplomi;

            anagrafica.provincia = document.getElementById("provincia").value;

            let sport = "";
            let lista = document.getElementById("sport");
            for (let i = 0; i < lista.options.length; i++) {
                if (lista.options[i].selected) {
                    sport += lista.options[i].value + " ";
                }
            }
            anagrafica.sport = sport === "" ? "Nessuno" : sport;

            let tab =
                "<table border='1'>" +
                "<tr><th>Nome</th><th>Cognome</th><th>Indirizzo</th><th>Città</th><th>Sesso</th><th>Diplomi</th><th>Provincia</th><th>Sport</th></tr>" +
                "<tr>" +
                "<td>" + anagrafica.nome + "</td>" +
                "<td>" + anagrafica.cognome + "</td>" +
                "<td>" + anagrafica.indirizzo + "</td>" +
                "<td>" + anagrafica.citta + "</td>" +
                "<td>" + anagrafica.sesso + "</td>" +
                "<td>" + anagrafica.diplomi + "</td>" +
                "<td>" + anagrafica.provincia + "</td>" +
                "<td>" + anagrafica.sport + "</td>" +
                "</tr></table>";

            document.getElementById("risultato").innerHTML = tab;
        }
    </script>
</head>
<body>

<h2>Anagrafica 3.0</h2>

Nome: <input type="text" id="nome"><br><br>
Cognome: <input type="text" id="cognome"><br><br>
Indirizzo: <input type="text" id="indirizzo"><br><br>
Città: <input type="text" id="citta"><br><br>

Sesso:<br>
<input type="radio" name="sesso" value="Maschio"> Maschio<br>
<input type="radio" name="sesso" value="Femmina"> Femmina<br><br>

Diplomi:<br>
<input type="checkbox" name="dipl" value="Media"> Media<br>
<input type="checkbox" name="dipl" value="Superiore"> Superiore<br>
<input type="checkbox" name="dipl" value="Laurea"> Laurea<br><br>

Provincia:<br>
<select id="provincia">
    <option>MI</option>
    <option>RM</option>
    <option>TO</option>
    <option>NA</option>
    <option>FI</option>
</select><br><br>

Sport (seleziona più di uno):<br>
<select id="sport" multiple size="4">
    <option>Calcio</option>
    <option>Basket</option>
    <option>Nuoto</option>
    <option>Palestra</option>
    <option>Tennis</option>
</select><br><br>

<button onclick="stampa()">Stampa</button>

<br><br>

<div id="risultato"></div>

</body>
</html>
